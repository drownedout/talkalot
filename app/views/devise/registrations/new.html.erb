<div class="container">

  <h2>Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="form-inputs">

            <div class="form-group" >
              <%= f.label :username, "User Name" %> <br />
              <%= f.text_field :username, placeholder: "User Name", required: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :first_name, "First Name" %><br />
              <%= f.text_field :first_name, placeholder: "First Name", required: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name, "Last Name" %><br />
              <%= f.text_field :last_name, placeholder: "Last Name", required: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :email, "Email" %><br />
              <%= f.email_field :email, placeholder: "Email", required: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "Password" %>
              <em>(<%= f.hint "#{@minimum_password_length} characters minimum" if @minimum_password_length %>)</em>
              <%= f.password_field :password, placeholder: "Password", required: true, class: "form-control" %> 
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", required: true, class: "form-control" %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Sign Up", class: "btn btn-primary" %>
            </div>
          <% end %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>