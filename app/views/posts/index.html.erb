<div class="container">

<%= render 'form' %>

<% @posts.each do |post| %>
	<div class="row text-center">
		<div class="col-md-12">
			<p><%= post.content %></p>
		</div>
		<div class="col-md-6">
			<p>By <strong><%= post.user.username %></strong> at <%= post.created_at %></p>
		</div>
		<div class="col-md-4">
			<%= link_to "Delete", post_path(post.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
		</div>
	</div>
<% end %>
</div>